<div class="container">
  <% @categories.each do |category| %>
    <div class="category">
      <h2><%= category.name %></h2>
      <div class="row">
        <% category.products.limit(4).each do |product| %>
          <div class="col-md-3">
            <div class="card mb-3" style="text-align:center;" onmouseover="this.style.border='2px solid green';" onmouseout="this.style.border='none';">
              <div class="card-img-top-container">
                <a href="#">
                  <% if product.image.attached?%>
                    <%= image_tag product.image , class:"card-img-top product-image", style: "width: 100px;" %> 
                  <% end %>
                  <div class="overlay">
                    <div class="overlay-text">
                      <h5><%= product.name %></h5>
                      <p>$<%= product.price %></p>
                      <%# <a href="#" class="btn btn-success" style="height:30px; border-radius:64px; width:102px;">Add to cart</a> %>
                      <%= link_to "Add to cart",  line_items_path(product_id: product.id), class:"btn btn-success", method: :post, style:"height:30px; border-radius:64px; width:102px;"  %>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
        <% if category.products.count > 4 %>
          
              
            <%= link_to "View More", category_products_path(category) %>    
              
 

        
        <% end %>
    </div>
  <% end %>
