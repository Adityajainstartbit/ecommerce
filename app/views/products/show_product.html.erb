<p id="notice"><%= notice %></p>

 <div class="container" style="margin-top:75px">
  <div class="row">
    <div class="col-md-4">
      <% if @product.image.attached?%>
        <%= image_tag @product.image %>
      <% end %>
     
            <%= link_to line_items_path(product_id: @product.id), method: :post, class: "btn btn-primary mt-3" do %>
        Add to cart <i class="fa fa-shopping-cart"></i>
        <% end %>

    </div>
    <div class="col-md-8">
      <h3 style="color: blue;"><%= @product.name %></h3>
      <h6><%= @product.desciption %></h4>
      <table class="table mt-4">
        <tbody>
          <tr>
            <th>Price:</th>
            <td><%= number_to_currency(@product.price) %></td>
          </tr>
          <tr>
            <th>Weight:</th>
            <td><%= @product.weight %>gm</td>
          </tr>
          <tr>
            <th>Stock:</th>
            <td><%= @product.stock %></td>
          </tr>
          <tr>
            <th>Status:</th>
            <td><%= @product.status %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
